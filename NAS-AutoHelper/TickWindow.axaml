<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:nasAutoHelper="clr-namespace:NAS_AutoHelper"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NAS_AutoHelper.TickWindow"
        Width="300" Height="200" CanResize="False"
        Closing="Window_OnClosing"
        Title="NAS自动关机">
    <Panel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="CancelText" Text="{Binding $parent[nasAutoHelper:TickWindow].Seconds, StringFormat='断电无网络连接，将在 {0} s后关机。'}" TextWrapping="Wrap"></TextBlock>
            <Separator  Margin="0,10,0,10"></Separator>
            <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Background="Transparent" BorderBrush="Teal" BorderThickness="1" Foreground="Teal" Name="CancelBtn" Click="CancelBtn_OnClick">撤销</Button>
            </StackPanel>
        </StackPanel>
    </Panel>
</Window>