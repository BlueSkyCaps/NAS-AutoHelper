<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NAS_AutoHelper.App"
             RequestedThemeVariant="Default"
             Name="UPS自动关机"
             >
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    
    <!-- macOS覆盖默认的Avalonia菜单栏 -->
    <NativeMenu.Menu>
         <NativeMenu>
             <NativeMenuItem Header="UPS自动关机" />
         </NativeMenu>
    </NativeMenu.Menu>
    <!-- 托盘菜单 -->
    <TrayIcon.Icons>
         <TrayIcons>
             <TrayIcon Icon="/Assets/tray.png"  IsVisible="False">
                 <TrayIcon.Menu>
                     <NativeMenu>
                         <NativeMenuItem Header="设置" Click="SettingItem_OnClick"/>
                         <NativeMenuItem Header="说明" Click="AboutItem_OnClick"/>
                         <NativeMenuItemSeparator />
                         <NativeMenuItem Header="退出"   Click="ExitItem_OnClick"/>
                     </NativeMenu>
                 </TrayIcon.Menu>
             </TrayIcon>
         </TrayIcons>
     </TrayIcon.Icons>
</Application>